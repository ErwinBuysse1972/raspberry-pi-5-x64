{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Raspberry Pi 5 Remote Debug (hello_pi)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/rpi-userland-debug/hello_pi",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb-multiarch",   // <-- change this
      "miDebuggerServerAddress": "192.168.0.127:2345",
      "setupCommands": [
        {
          "description": "Enable pretty printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set sysroot",
          "text": "set sysroot /opt/rpi-sysroot",
          "ignoreFailures": true
        }
      ],
      "externalConsole": false
    }
  ]
}
